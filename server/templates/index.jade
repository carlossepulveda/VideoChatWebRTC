doctype
html
    head
        title= "Real time web chat"
    body
        .members-container(style='min-height : 40px; width: 500px;border-style:solid;border-width:1px;border-radius:10px;border-color:rgba(200,200,200, 0.5);margin-top:10px;max-height:200px;overflow:auto;margin-bottom:10px')
            div(style="margin:5px")
               |Informaci√≥n
               hr
               #username(style="width:200px;height:20px;padding-top:10px;float:left")
               #chatname(style="height:20px;padding-top:10px")
        #chat-container(style='width: 502px; height: 300px;float:left;background-color:rgba(200,200,200, 0.5)')
            #content(style='width: 500px; height: 300px; margin: 0 0 20px 0; border: solid 1px #999;overflow:auto')
            .controls
                input#field(style='width:350px;')
                input#send(type='button', value='send')
        #videos-container(style='width: 500px;height: 400px;float:left;padding-left:10px;margin-top:-100px')
            #main-video-container(style='width: 500px; height: 280px;')
                video#other-video(style="height:100%;width:100%;display:none",autoplay="true")
                #other-video-holder(style="height:100%;width:100%;position:relative")
                    img(src="/static/img/user.png", style="width:200px;height:200px;margin-top:40px;margin-left:150px;position:absolute")
            #other-videos-carrier-container(style='width: 500px;height: 120px;overflow-x: auto;overflow-y:hidden;position:relative')
                video#main-video(style='width:100%;height:100%;margin-top:10px',autoplay="true",muted="true")
        

    script#other-video-template(type="text/template")
        div.video-container(style='width: 500px; height: 100%; background-color:white;position:relative;float:left;border-style:solid;border-width:1px')
            video#other-video-container(style="height:100%;width:150px",autoplay="true")

    script(src="/static/js/libs/jquery.min.js")
    script(src="/static/js/libs/socket.io-1.0.4.js")
    script(src="/static/js/videoRTCController.js")
    script(src='/static/js/chatController.js')   